                    <Button x:Name="DefaultsBtn" Foreground="{DynamicResource TextColor}" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" BorderThickness="0" Margin="0,15,0,0" Style="{DynamicResource AppButton}" Background="#00000000" BorderBrush="#FFABADB3">
