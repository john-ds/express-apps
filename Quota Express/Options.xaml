                                    <ContentControl x:Name="PercentageImg" Content="{DynamicResource UntickIcon}" Width="20" Margin="5,0,0,0" Tag="0" />
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,10,0" Height="21.31" Text="{DynamicResource PercentageDescStr}" Padding="5,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </DockPanel>
                        <DockPanel x:Name="SortPnl" LastChildFill="False">
