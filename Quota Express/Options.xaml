                                <DockPanel Height="24">
                                    <TextBlock x:Name="SortTxt" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,3,15,0" Height="21.31" Text="{DynamicResource SizeDescStr}" Padding="0"/>
                                    <ContentControl Content="{DynamicResource DownIcon}" Width="11.5" HorizontalAlignment="Right" Margin="0,0,10,0" Height="24" DockPanel.Dock="Right" />
                                </DockPanel>
                            </Button>
