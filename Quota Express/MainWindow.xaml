        <Popup x:Name="SortPopup" UseLayoutRounding="True" PlacementTarget="{Binding ElementName=SortBtn}" AllowsTransparency="True" PopupAnimation="Slide" StaysOpen="False" Margin="0"  VerticalOffset="5">
            <Grid>
                <ContentControl Content="{StaticResource PopupShadow}" Focusable="False"/>
                <Border Margin="10" CornerRadius="5" Background="{DynamicResource SecondaryColor}">
                    <ex:ClippedBorder CornerRadius="5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="0">
                                <ex:AppButton x:Name="NameAZBtn" NoShadow="True" Background="Transparent" Text="{DynamicResource NameAZStr}" IconVisibility="Collapsed" GapMargin="0" Tag="az" CornerRadius="0" HorizontalContentAlignment="Stretch" Height="32"/>
                                <ex:AppButton x:Name="NameZABtn" NoShadow="True" Background="Transparent" Text="{DynamicResource NameZAStr}" IconVisibility="Collapsed" GapMargin="0" Tag="za" CornerRadius="0" HorizontalContentAlignment="Stretch" Height="32"/>
                                <ex:AppButton x:Name="SizeAscBtn" NoShadow="True" Background="Transparent" Text="{DynamicResource SizeAscStr}" IconVisibility="Collapsed" GapMargin="0" Tag="sa" CornerRadius="0" HorizontalContentAlignment="Stretch" Height="32"/>
                                <ex:AppButton x:Name="SizeDescBtn" NoShadow="True" Background="Transparent" Text="{DynamicResource SizeDescStr}" IconVisibility="Collapsed" GapMargin="0" Tag="sd" CornerRadius="0" HorizontalContentAlignment="Stretch" Height="32"/>
                                <ex:AppButton x:Name="DateNewOldBtn" NoShadow="True" Background="Transparent" Text="{DynamicResource NewestStr}" IconVisibility="Collapsed" GapMargin="0" Tag="nf" CornerRadius="0" HorizontalContentAlignment="Stretch" Height="32"/>
                                <ex:AppButton x:Name="DateOldNewBtn" NoShadow="True" Background="Transparent" Text="{DynamicResource OldestStr}" IconVisibility="Collapsed" GapMargin="0" Tag="of" CornerRadius="0" HorizontalContentAlignment="Stretch" Height="32"/>
                            </StackPanel>
                        </ScrollViewer>
                    </ex:ClippedBorder>
                </Border>
            </Grid>
        </Popup>
        <Popup x:Name="HelpPopup" UseLayoutRounding="True" PlacementTarget="{Binding ElementName=HelpBtn}" AllowsTransparency="True" PopupAnimation="Slide" StaysOpen="False" Margin="0" Placement="Left" HorizontalOffset="10">
            <Grid Width="280">
                <ContentControl Content="{StaticResource PopupShadow}" Focusable="False"/>
                <Border Margin="10,0,10,10" CornerRadius="5" Background="{DynamicResource AppColor}">
                    <ex:ClippedBorder CornerRadius="5">
                        <DockPanel>
                            <TextBox x:Name="HelpSearchTxt" Margin="5,3" UseLayoutRounding="False" VerticalContentAlignment="Center" VerticalAlignment="Top" Height="24" UndoLimit="0" Padding="5,0,0,0" Foreground="{DynamicResource TextColor}" Background="{DynamicResource BackColor}" Template="{DynamicResource RoundedTextBox}" DockPanel.Dock="Top">
                                <TextBox.ContextMenu>
                                    <ContextMenu Visibility="Collapsed"/>
                                </TextBox.ContextMenu>
                            </TextBox>
                            <StackPanel DockPanel.Dock="Top" Background="{DynamicResource SecondaryColor}">
                                <TextBlock x:Name="HelpInfoTxt" Text="{DynamicResource SearchHelpStr}" Margin="10,5" TextWrapping="Wrap"></TextBlock>
                                <ex:AppButton x:Name="Help1Btn" Text="Help topic" TextMargin="2,5,2,6" HorizontalContentAlignment="Stretch" CornerRadius="0" Icon="{DynamicResource HelpIcon}" NoShadow="True" Background="Transparent" Height="Auto" TextWrapping="Wrap" Padding="10,0"/>
                                <ex:AppButton x:Name="Help2Btn" Text="Help topic" TextMargin="2,5,2,6" HorizontalContentAlignment="Stretch" CornerRadius="0" Icon="{DynamicResource HelpIcon}" NoShadow="True" Background="Transparent" Height="Auto" TextWrapping="Wrap" Padding="10,0"/>
                                <ex:AppButton x:Name="Help3Btn" Text="Help topic" TextMargin="2,5,2,6" HorizontalContentAlignment="Stretch" CornerRadius="0" Icon="{DynamicResource HelpIcon}" NoShadow="True" Background="Transparent" Height="Auto" TextWrapping="Wrap" Padding="10,0"/>
                                <Rectangle Height="2" Fill="{DynamicResource AppColor}"></Rectangle>
                                <ex:AppButton x:Name="HelpLinkBtn" Text="{DynamicResource OnlineHelpStr}" TextMargin="2,5,2,6" HorizontalContentAlignment="Stretch" CornerRadius="0" Icon="{DynamicResource HelpIcon}" NoShadow="True" Background="Transparent" Height="Auto" TextWrapping="Wrap" Padding="10,0"/>
                            </StackPanel>
                        </DockPanel>
                    </ex:ClippedBorder>
                </Border>
            </Grid>
        </Popup>
    </Grid>
</Window>
