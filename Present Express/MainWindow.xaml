<Window x:Name="Present1" x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Present_Express"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d" xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="{DynamicResource TitleStr}" Height="680" Width="1060" MinWidth="600" MinHeight="400" BorderThickness="0" UseLayoutRounding="False" WindowStyle="None">
    <Window.Resources>
        <SolidColorBrush x:Key="SlideBackColour" Color="White"/>
        <System:Double x:Key="ImageWidth">160</System:Double>
        <System:Double x:Key="ImageHeight">90</System:Double>
        <Stretch x:Key="FitStretch">2</Stretch>
        <Storyboard x:Key="SideStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="grid4">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="grid">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="DocStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="grid1">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuBtnsFadeIn">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="HomeBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="DesignBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ShowBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuBtnsFadeOut">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="HomeBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="DesignBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ShowBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="HomeStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="HomePnl">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="DesignStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="DesignPnl">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="ShowStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ShowPnl">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="NewStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="MenuSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="0,45,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="OpenStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="MenuSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="0,83,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="SaveStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="MenuSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="0,159,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="PrintStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="MenuSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="0,197,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="ShareStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="MenuSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="0,235,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="InfoStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="MenuSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="0,311,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="MoreUpInfoStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="HelpBtnImg1_Copy1">
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="180"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MoreDownInfoStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="HelpBtnImg1_Copy1">
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="HomeMnStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="DocTabSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="65,0,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="DesignMnStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="DocTabSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="153,0,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="ShowMnStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="DocTabSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="241,0,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="PresentHoverOut">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="MenuIcon">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="4,9,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)" Storyboard.TargetName="rect835">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="100"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="PresentHoverIn">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="MenuIcon">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="5,11,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)" Storyboard.TargetName="rect835">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Shortcuts -->
        <RoutedUICommand x:Key="NewCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="OpenCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="SaveCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="PrintCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="ExportCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="HelpCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="ChartCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="DrawingCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="ScreenshotCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="PictureCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="TextCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="RunCommand"></RoutedUICommand>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource NewCommand}" Executed="NewBtn_Click" />
        <CommandBinding Command="{StaticResource OpenCommand}" Executed="OpenBtn_Click" />
        <CommandBinding Command="{StaticResource SaveCommand}" Executed="SaveBtn_Click" />
        <CommandBinding Command="{StaticResource PrintCommand}" Executed="PrintBtn_Click" />
        <CommandBinding Command="{StaticResource ExportCommand}" Executed="ExportBtn_Click" />
        <CommandBinding Command="{StaticResource HelpCommand}" Executed="HelpBtn_Click" />
        <CommandBinding Command="{StaticResource ChartCommand}" Executed="ChartBtn_Click" />
        <CommandBinding Command="{StaticResource DrawingCommand}" Executed="DrawingsBtn_Click" />
        <CommandBinding Command="{StaticResource ScreenshotCommand}" Executed="ScreenshotBtn_Click" />
        <CommandBinding Command="{StaticResource PictureCommand}" Executed="PictureBtn_Click" />
        <CommandBinding Command="{StaticResource TextCommand}" Executed="TextBtn_Click" />
        <CommandBinding Command="{StaticResource RunCommand}" Executed="RunBtn_Click" />

    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{StaticResource NewCommand}" />
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{StaticResource OpenCommand}" />
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{StaticResource SaveCommand}" />
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{StaticResource PrintCommand}" />
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{StaticResource ExportCommand}" />
        <KeyBinding Key="R" Modifiers="Ctrl" Command="{StaticResource ChartCommand}" />
        <KeyBinding Key="D" Modifiers="Ctrl" Command="{StaticResource DrawingCommand}" />
        <KeyBinding Key="B" Modifiers="Ctrl" Command="{StaticResource ScreenshotCommand}" />
        <KeyBinding Key="M" Modifiers="Ctrl" Command="{StaticResource PictureCommand}" />
        <KeyBinding Key="T" Modifiers="Ctrl" Command="{StaticResource TextCommand}" />
        <KeyBinding Key="F5" Command="{StaticResource RunCommand}" />
        <KeyBinding Key="F1" Command="{StaticResource HelpCommand}" />        

    </Window.InputBindings>
    <Grid>
        <TabControl x:Name="MainTabs" Margin="0,4,0,0" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Focusable="False" BorderThickness="0" Background="{DynamicResource BackColor}">

            <TabItem x:Name="MenuTab" Header="Menu" Margin="0,0,0,0" Focusable="False">
                <Grid x:Name="grid" Background="{DynamicResource BackColor}" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    <TabControl x:Name="MenuTabs" Margin="114,4,0,0" TabStripPlacement="Left" Padding="0" BorderThickness="0">
                        <TabItem x:Name="NewTab" Header="TabItem" Focusable="False">
                            <Grid>
                                <ScrollViewer Margin="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                    <Grid ScrollViewer.HorizontalScrollBarVisibility="Visible" Background="{DynamicResource BackColor}">
                                        <Label x:Name="MenuHeaderLbl" VerticalAlignment="Top" Height="54.96"  VerticalContentAlignment="Bottom" Margin="0" Padding="30,5,5,5" FontSize="24" Content="{DynamicResource NewStr}" Background="{x:Null}" Foreground="{DynamicResource TextColor}" FontFamily="Segoe UI Light"/>
                                        <WrapPanel x:Name="TemplateGrid" HorizontalAlignment="Left" Margin="30,70,0,30" Width="822">
                                            <Button x:Name="BlankBtn" Height="130" VerticalAlignment="Top" Width="170" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Margin="0" Style="{DynamicResource AppButton}" Tag="Blank" Foreground="{DynamicResource TextColor}">
                                                <StackPanel Height="130" Width="170" >
                                                    <Border Height="85" Margin="10,10,10,0" BorderBrush="#FFABADB3" BorderThickness="1" Background="White" >
                                                        <TextBlock x:Name="DisplayTxt1" Foreground="{DynamicResource TextColor}" FontSize="14" Margin="0" Padding="12,15,0,0"/>
                                                    </Border>
                                                    <TextBlock x:Name="BlankBtnTxt" VerticalAlignment="Center" FontSize="14" Margin="15,0,10,0" Height="33.62" Padding="0,6,0,0" TextTrimming="CharacterEllipsis" Text="{DynamicResource BlankStr}"/>
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="QuetzalBtn" Height="130" VerticalAlignment="Top" Width="170" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Margin="0" Style="{DynamicResource AppButton}" Foreground="{DynamicResource TextColor}">
                                                <StackPanel Height="130" Width="170" >
                                                    <Border Height="85" Margin="10,10,10,0" BorderBrush="#FFABADB3" BorderThickness="1" Background="White" >
                                                        <ContentControl x:Name="DisplayTxt5" Margin="0,15" Content="{DynamicResource PictureIcon}"/>
                                                    </Border>
                                                    <TextBlock x:Name="ClassicBtnTxt1" VerticalAlignment="Center" FontSize="14" Margin="15,0,10,0" Height="33.62" Padding="0,6,0,0" TextTrimming="CharacterEllipsis" Text="{DynamicResource PhotoTemplateStr}"/>
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="OnlineTempBtn" Height="130" VerticalAlignment="Top" Width="170" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Margin="0" Style="{DynamicResource AppButton}" Foreground="{DynamicResource TextColor}">
                                                <StackPanel Height="130" Width="170" >
                                                    <Border Height="85" Margin="10,10,10,0" BorderBrush="#FFABADB3" BorderThickness="1" Background="White" >
                                                        <ContentControl Margin="0,15" Content="{DynamicResource DoughnutIcon}"/>
                                                    </Border>
                                                    <TextBlock x:Name="ClassicBtnTxt2" VerticalAlignment="Center" FontSize="14" Margin="15,0,10,0" Height="33.62" Padding="0,6,0,0" TextTrimming="CharacterEllipsis" Text="{DynamicResource ChartTemplateStr}"/>
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="BackTemplateBtn" Height="130" VerticalAlignment="Top" Width="170" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Margin="0" Style="{DynamicResource AppButton}" Foreground="{DynamicResource TextColor}">
                                                <StackPanel Height="130" Width="170" >
                                                    <Border Height="85" Margin="10,10,10,0" BorderBrush="#FFABADB3" BorderThickness="1" Background="White" >
                                                        <ContentControl Margin="0,15" Content="{DynamicResource UndoIcon}"/>
                                                    </Border>
                                                    <TextBlock VerticalAlignment="Center" FontSize="14" Margin="15,0,10,0" Height="33.62" Padding="0,6,0,0" TextTrimming="CharacterEllipsis" Text="{DynamicResource BackStr}"/>
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="QuetzalLinkBtn" Height="130" VerticalAlignment="Top" Width="170" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Margin="0" Style="{DynamicResource AppButton}" Foreground="{DynamicResource TextColor}">
                                                <StackPanel Height="130" Width="170" >
                                                    <Border Height="85" Margin="10,10,10,0" BorderBrush="#FFABADB3" BorderThickness="1" Background="White" >
                                                        <ContentControl Margin="0" Content="{DynamicResource QuetzalLogoIcon}"/>
                                                    </Border>
                                                    <TextBlock VerticalAlignment="Center" FontSize="14" Margin="15,0,10,0" Height="33.62" Padding="0,6,0,0" TextTrimming="CharacterEllipsis" Text="{DynamicResource PhotoMoreStr}"/>
                                                </StackPanel>
                                            </Button>
                                        </WrapPanel>
                                    </Grid>
                                </ScrollViewer>
                                <Grid x:Name="TemplateLoadingGrid" Background="{DynamicResource BackColor}" Margin="15,60,0,0" Visibility="Collapsed">
                                    <DockPanel MaxHeight="400" Margin="0,50">
                                        <TextBlock Text="{DynamicResource LoaderSubtitleStr}" HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Center" Margin="0,5,0,0" DockPanel.Dock="Bottom"/>
                                        <TextBlock Text="{DynamicResource TemplateLoadingStr}" HorizontalAlignment="Center" FontFamily="Segoe UI Light" FontSize="24" VerticalAlignment="Center" Margin="0" DockPanel.Dock="Bottom"/>
                                        <Viewbox VerticalAlignment="Top">
                                            <ContentControl Content="{DynamicResource TemplateLoaderVector}"/>
                                        </Viewbox>
                                    </DockPanel>
                                </Grid>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="OpenTab" Header="TabItem" Focusable="False">
                            <ScrollViewer Margin="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <Grid ScrollViewer.HorizontalScrollBarVisibility="Visible" Background="{DynamicResource BackColor}">
                                    <Label VerticalAlignment="Top" Height="54.96"  VerticalContentAlignment="Bottom" Margin="0" Padding="30,5,5,5" FontSize="24" Content="{DynamicResource OpenStr}" Background="{x:Null}" Foreground="{DynamicResource TextColor}" FontFamily="Segoe UI Light"/>
                                    <TabControl x:Name="OpenTabs" Margin="148,65.96,30,30" TabStripPlacement="Left" Padding="0" BorderThickness="1,0,0,0" BorderBrush="{DynamicResource AppColor}" Focusable="False">
                                        <TabItem x:Name="RecentTab" Header="TabItem" Margin="-7,0,5,-4" Focusable="False">
                                            <ScrollViewer Margin="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                                <Grid x:Name="RecentGrid" ScrollViewer.HorizontalScrollBarVisibility="Visible" Background="{DynamicResource BackColor}">

                                                    <Label x:Name="MenuHeaderLbl9" VerticalAlignment="Top" Height="50"  VerticalContentAlignment="Bottom" Margin="0" Padding="30,5,5,5" FontSize="20" Content="{DynamicResource RecentFilesStr}" Background="{x:Null}" Foreground="{DynamicResource TextColor}"/>
                                                    <StackPanel x:Name="RecentStack" ScrollViewer.HorizontalScrollBarVisibility="Visible" CanVerticallyScroll="True" ScrollViewer.CanContentScroll="True" RenderTransformOrigin="0.5,0.5" Margin="30,63.96,0,30">
                                                        <!-- BUTTON TO BE INCLUDED FROM CODE-BEHIND -->
                                                        <Label x:Name="NoRecentsLbl" VerticalAlignment="Top" Margin="0" Padding="0" Content="{DynamicResource NoRecentStr}" Background="{x:Null}" FontSize="14" Height="25" Foreground="{DynamicResource TextColor}"/>
                                                        <Button x:Name="RecentFileBtn" Height="57" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Background="Transparent" BorderBrush="{DynamicResource BackColor}" BorderThickness="0" Style="{DynamicResource AppButton}" Visibility="Collapsed">
                                                            <Button.ContextMenu>
                                                                <ContextMenu x:Name="RecentFavouriteMenu" FontSize="14" HasDropShadow="False" Background="{DynamicResource BackColor}" BorderThickness="1,1,1,1" BorderBrush="#FFABADB3" Style="{DynamicResource SimpleContextMenu}">
                                                                    <MenuItem x:Name="OpenFileBtn" Header="{DynamicResource OpenCmStr}" BorderThickness="0" Style="{DynamicResource SimpleMenuItem}" Padding="5"/>
                                                                    <MenuItem x:Name="OpenFileLocationBtn" Header="{DynamicResource OpenLocationCmStr}" BorderThickness="0" Style="{DynamicResource SimpleMenuItem}" Padding="5"/>
                                                                    <MenuItem x:Name="CopyFilePathBtn" Header="{DynamicResource CopyPathCmStr}" BorderThickness="0" Style="{DynamicResource SimpleMenuItem}" Padding="5"/>
                                                                    <MenuItem x:Name="RemoveFileBtn" Header="{DynamicResource RemoveFileCmStr}" BorderThickness="0" Style="{DynamicResource SimpleMenuItem}" Padding="5"/>
                                                                </ContextMenu>
                                                            </Button.ContextMenu>
                                                            <DockPanel Height="53" LastChildFill="False">
                                                                <ContentControl x:Name="RecentFileImg" Content="{DynamicResource NewIcon}" Width="24" HorizontalAlignment="Left" Margin="10,0,0,2" />
                                                                <TextBlock x:Name="RecentFileTxt" FontSize="14" Margin="15,6,0,0" TextTrimming="CharacterEllipsis"><Run FontWeight="Bold" Text="Name of File"/><LineBreak/><Run Text="C://path/folder/folder/folder/folder/folder/folder/folder/name of file.rtf"/></TextBlock>
                                                            </DockPanel>
                                                        </Button>
                                                        <Button x:Name="ClearRecentsBtn" Foreground="{DynamicResource TextColor}" Height="38" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" Style="{DynamicResource AppBorderlessButton}" Margin="0,20,0,0">
                                                            <StackPanel Orientation="Horizontal" Height="38">
                                                                <ContentControl x:Name="AddFavouritesBtnImg1" Content="{DynamicResource CrossIcon}" Width="24" HorizontalAlignment="Left" Margin="6,0,6,2" />
                                                                <TextBlock x:Name="AddFavouritesBtnTxt1" HorizontalAlignment="Center" Width="110.563" FontSize="14" Margin="0,8,0,0" Text="{DynamicResource ClearListStr}"></TextBlock>
                                                            </StackPanel>
                                                        </Button>

                                                    </StackPanel>
                                                </Grid>
                                            </ScrollViewer>
                                        </TabItem>
                                        <TabItem x:Name="FavouritesTab" Header="TabItem" Margin="-7,0,5,-4" Focusable="False">
                                            <ScrollViewer Margin="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                                <Grid Background="{DynamicResource BackColor}" ScrollViewer.HorizontalScrollBarVisibility="Visible">

                                                    <Label x:Name="MenuHeaderLbl10" Foreground="{DynamicResource TextColor}" VerticalAlignment="Top" Height="50"  VerticalContentAlignment="Bottom" Margin="0" Padding="30,5,5,5" FontSize="20" Content="{DynamicResource FavouriteStr}" Background="{DynamicResource BackColor}"/>
                                                    <StackPanel x:Name="FavouriteStack" Background="{DynamicResource BackColor}" ScrollViewer.HorizontalScrollBarVisibility="Visible" CanVerticallyScroll="True" ScrollViewer.CanContentScroll="True" RenderTransformOrigin="0.5,0.5" Margin="30,63.96,0,30">
                                                        <Label x:Name="NoFavouritesLbl" Foreground="{DynamicResource TextColor}" VerticalAlignment="Top" Margin="0" Padding="0" Content="{DynamicResource NoFavouriteStr}" Background="{DynamicResource BackColor}" FontSize="14"/>
                                                        <Button x:Name="RecentFileBtn1" Height="57" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Background="Transparent" BorderBrush="{DynamicResource BackColor}" BorderThickness="0" Style="{DynamicResource AppButton}" Visibility="Collapsed">
                                                            <DockPanel Height="53" LastChildFill="False">
                                                                <ContentControl x:Name="RecentFileImg1" Content="{DynamicResource NewIcon}" Width="24" HorizontalAlignment="Left" Margin="10,0,0,2" />
                                                                <TextBlock x:Name="RecentFileTxt1" FontSize="14" Margin="15,6,0,0" TextTrimming="CharacterEllipsis"><Run FontWeight="Bold" Text="Name of File"/><LineBreak/><Run Text="C://path/folder/folder/folder/folder/folder/folder/folder/name of file.rtf"/></TextBlock>
                                                            </DockPanel>
                                                        </Button>
                                                        <Button x:Name="AddFavouritesBtn" Foreground="{DynamicResource TextColor}" Height="38" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" Style="{DynamicResource AppRoundedButton}" Margin="0,20,0,0">
                                                            <StackPanel Orientation="Horizontal" Height="38">
                                                                <ContentControl x:Name="AddFavouritesBtnImg" Content="{DynamicResource AddIcon}" Width="24" HorizontalAlignment="Left" Margin="6,0,6,2" />
                                                                <TextBlock x:Name="AddFavouritesBtnTxt" HorizontalAlignment="Center" Width="110.563" FontSize="14" Margin="0,8,0,0" Text="{DynamicResource AddFavouriteStr}"/>
                                                            </StackPanel>
                                                        </Button>
                                                        <Button x:Name="ClearFavouritesBtn" Foreground="{DynamicResource TextColor}" Height="38" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" Style="{DynamicResource AppBorderlessButton}" Margin="0,10,0,0">
                                                            <StackPanel Orientation="Horizontal" Height="38">
                                                                <ContentControl x:Name="AddFavouritesBtnImg2" Content="{DynamicResource CrossIcon}" Width="24" HorizontalAlignment="Left" Margin="6,0,6,2" />
                                                                <TextBlock x:Name="AddFavouritesBtnTxt2" HorizontalAlignment="Center" Width="110.563" FontSize="14" Margin="0,8,0,0" Text="{DynamicResource ClearListStr}"></TextBlock>
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </ScrollViewer>
