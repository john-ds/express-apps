                                                        <ContentControl Margin="0,15" Content="{DynamicResource UndoIcon}"/>
                                                    </Border>
                                                    <TextBlock VerticalAlignment="Center" FontSize="14" Margin="15,0,10,0" Height="33.62" Padding="0,6,0,0" TextTrimming="CharacterEllipsis" Text="{DynamicResource BackStr}"/>
