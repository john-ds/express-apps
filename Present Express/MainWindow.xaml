            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="DesignMnStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="DocTabSelector">
