            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="ImagesStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="ShareSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="-5,117,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>

