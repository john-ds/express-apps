<Window x:Class="MainWindow" x:Name="Font1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Font_Express"
        xmlns:ex="clr-namespace:ExpressControls;assembly=ExpressControls"
        mc:Ignorable="d"
        Title="Font Express" Background="{DynamicResource BackColor}" Height="620" Width="880" WindowStartupLocation="CenterScreen" MinWidth="520" MinHeight="350" Style="{DynamicResource ChromeWindowStyle}">
    <Window.Resources>
        <Storyboard x:Key="LoadingStoryboard"/>
        <Storyboard x:Key="MenuStoryboard"/>
        <Storyboard x:Key="DocStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="grid1">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuBtnsFadeIn">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="HomeBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="FilterBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="CategoryBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuBtnsFadeOut">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="HomeBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="FilterBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="CategoryBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="HomeStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="HomePnl">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="FilterStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="FilterPnl">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CategoryStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="CategoryPnl">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="HomeMnStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="DocTabSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="87,0,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="FilterMnStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="DocTabSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="169,0,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CategoryMnStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="DocTabSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="251,0,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>

        <!--<Storyboard x:Key="FontHoverOut">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="MenuIcon">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="4,9,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)" Storyboard.TargetName="rect835">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="100"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="FontHoverIn">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="MenuIcon">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="5,11,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)" Storyboard.TargetName="rect835">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>-->
        <Storyboard x:Key="LoaderStartStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="LoadingGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="LoaderEndStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="LoadingGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        
        <!-- Shortcuts -->
        <RoutedUICommand x:Key="AllCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="FavCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="CompareCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="RefreshCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="SearchCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="HelpCommand"></RoutedUICommand>

    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource AllCommand}" Executed="AllBtn_Click" />
        <CommandBinding Command="{StaticResource FavCommand}" Executed="FavBtn_Click" />
        <CommandBinding Command="{StaticResource CompareCommand}" Executed="CompareBtn_Click" />
        <CommandBinding Command="{StaticResource RefreshCommand}" Executed="RefreshBtn_Click" />
        <CommandBinding Command="{StaticResource SearchCommand}" Executed="SearchTxt_Focus" />
        <CommandBinding Command="{StaticResource HelpCommand}" Executed="HelpBtn_Click" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{StaticResource AllCommand}" />
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{StaticResource FavCommand}" />
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{StaticResource CompareCommand}" />
        <KeyBinding Key="R" Modifiers="Ctrl" Command="{StaticResource RefreshCommand}" />
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{StaticResource SearchCommand}" />
        <KeyBinding Key="F1" Command="{StaticResource HelpCommand}" />       
    </Window.InputBindings>
    
    <Grid>
        <Grid x:Name="grid1" Background="White" Margin="0">
            <Grid Margin="0">
                <Grid Margin="0,72,0,30">
                    <ScrollViewer x:Name="Scroller" Margin="0" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="RecentGrid" ScrollViewer.HorizontalScrollBarVisibility="Visible" Background="{DynamicResource BackColor}" Margin="0">
                            <WrapPanel x:Name="FontGrid" Margin="30" ItemWidth="235" ItemHeight="175" VerticalAlignment="Top">
                                <Grid x:Name="FontView" Height="175" Width="235" Background="{DynamicResource BackColor}" UseLayoutRounding="True">
                                    <ContentControl Content="{StaticResource PopupShadow}" Focusable="False"/>
                                    <Border Margin="10" CornerRadius="5" Background="{DynamicResource BackColor}">
                                        <ex:ClippedBorder CornerRadius="5">
                                            <DockPanel>
                                                <TextBlock x:Name="FontNameTxt" VerticalAlignment="Top" TextTrimming="CharacterEllipsis" FontSize="14" Margin="5,7,5,8" DockPanel.Dock="Bottom" Text="Name of font" HorizontalAlignment="Center"/>
                                                <Rectangle DockPanel.Dock="Bottom" Height="2" Fill="{DynamicResource AppColor}"/>
                                                <DockPanel x:Name="OptionsPnl" DockPanel.Dock="Bottom">
                                                    <ex:AppButton x:Name="ExpandBtn" TextVisibility="Collapsed" Background="Transparent" GapMargin="0" IconSize="16" Icon="{DynamicResource ExpandIcon}" CornerRadius="0" NoShadow="True" Margin="0" VerticalAlignment="Top" DockPanel.Dock="Right" HorizontalContentAlignment="Stretch" Height="25" Padding="4,0"/>
                                                    <ex:AppButton x:Name="CopyBtn" TextVisibility="Collapsed" Background="Transparent" GapMargin="0" IconSize="16" Icon="{DynamicResource CopyIcon}" CornerRadius="0" NoShadow="True" Margin="0" VerticalAlignment="Top" DockPanel.Dock="Right" HorizontalContentAlignment="Stretch" Height="25" Padding="4,0"/>
                                                    <ex:AppButton x:Name="FavouriteBtn" TextVisibility="Collapsed" Background="Transparent" GapMargin="0" IconSize="16" Icon="{DynamicResource CategoryIcon}" CornerRadius="0" NoShadow="True" Margin="0" VerticalAlignment="Top" DockPanel.Dock="Right" HorizontalContentAlignment="Stretch" Height="25" Padding="4,0"/>
                                                    <ex:AppButton x:Name="ItalicBtn" TextVisibility="Collapsed" Background="Transparent" GapMargin="0" IconSize="16" Icon="{DynamicResource ItalicIcon}" CornerRadius="0" NoShadow="True" Margin="0" VerticalAlignment="Top" DockPanel.Dock="Right" HorizontalContentAlignment="Stretch" Height="25" Padding="4,0"/>
                                                    <ex:AppButton x:Name="BoldBtn" TextVisibility="Collapsed" Background="Transparent" GapMargin="0" IconSize="16" Icon="{DynamicResource BoldIcon}" CornerRadius="0" NoShadow="True" Margin="0" VerticalAlignment="Top" DockPanel.Dock="Right" HorizontalContentAlignment="Stretch" Height="25" Padding="4,0"/>
                                                    <Slider x:Name="SizeSlider" Style="{StaticResource SimpleSlider}" IsSnapToTickEnabled="True" Minimum="10" Maximum="70" SmallChange="1" Value="20" Margin="5,2,5,0" LargeChange="10" VerticalAlignment="Center"/>
                                                </DockPanel>
                                                <TextBlock x:Name="DisplayTxt" Margin="10,10,10,5" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="The quick brown fox jumps over the lazy dog" DockPanel.Dock="Top" FontSize="20" FontFamily="Roboto"/>
                                            </DockPanel>
                                        </ex:ClippedBorder>
                                    </Border>
                                </Grid>
                            </WrapPanel>
                            <ex:AppButton x:Name="LoadMoreBtn" FontWeight="SemiBold" LastChildFill="True" IconVisibility="Collapsed" GapMargin="0" Text="{DynamicResource LoadMoreStr}" Margin="0,0,0,20" VerticalAlignment="Top" Height="32" HorizontalContentAlignment="Stretch" DockPanel.Dock="Top" HorizontalAlignment="Center" Width="150" Visibility="Collapsed"/>
                        </StackPanel>
                    </ScrollViewer>
                    <Grid x:Name="LoadingGrid" Background="{DynamicResource BackColor}" Visibility="Collapsed">
                        <DockPanel MaxHeight="400" Margin="0,50">
                            <TextBlock Text="{DynamicResource LoaderSubtitleStr}" HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Center" Margin="0,5,0,0" DockPanel.Dock="Bottom"/>
                            <TextBlock Text="{DynamicResource LoadingStr}" HorizontalAlignment="Center" FontFamily="Segoe UI Semibold" FontSize="24" VerticalAlignment="Center" Margin="0" DockPanel.Dock="Bottom"/>
                            <Viewbox>
                                <ContentControl Content="{DynamicResource FontLoaderVector}"/>
                            </Viewbox>
                        </DockPanel>
                    </Grid>

                </Grid>

                <TabControl x:Name="DocTabs" Margin="0,4,0,0" Height="68" Padding="0" BorderThickness="0" VerticalAlignment="Top">
                    <TabControl.Effect>
                        <DropShadowEffect Direction="270" Color="Gray" Opacity="0.1" BlurRadius="10"/>
                    </TabControl.Effect>
                    <TabItem x:Name="HomeTab" Header="TabItem" Focusable="False">
                        <Grid x:Name="grid2" Background="{DynamicResource SecondaryColor}">
                            <ScrollViewer x:Name="HomeScrollViewer" Margin="0,0,58,0" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                                <ScrollViewer.Resources>
                                    <Style TargetType="{x:Type ScrollBar}">
                                        <Style.Triggers>
                                            <Trigger Property="Orientation" Value="Horizontal">
                                                <Setter Property="Height" Value="10"/>
                                                <Setter Property="MinHeight" Value="0"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ScrollViewer.Resources>
                                <StackPanel x:Name="HomePnl" Margin="12,4,2,0" Background="{DynamicResource SecondaryColor}" Orientation="Horizontal" CanHorizontallyScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Left">
                                    <ex:MenuButton x:Name="AllBtn" Text="{DynamicResource FnAllStr}" Icon="{DynamicResource EditorIcon}" ToolTip="{DynamicResource AllToolStr}"/>
                                    <ex:MenuButton x:Name="FavBtn" Text="{DynamicResource FavouriteStr}" Icon="{DynamicResource FavouriteIcon}" ToolTip="{DynamicResource FavToolStr}"/>
                                    <ex:MenuButton x:Name="CompareBtn" Text="{DynamicResource CompareStr}" Icon="{DynamicResource TitleCaseIcon}" ToolTip="{DynamicResource CompareToolStr}"/>
                                    <Separator Style="{StaticResource VerticalSeparator}"/>
                                    <TextBox x:Name="SearchTxt" Margin="6,0,5,0" Text="{DynamicResource SearchStr}" Width="115" UseLayoutRounding="False" VerticalAlignment="Center" UndoLimit="0" Foreground="#FF818181" Tag="{DynamicResource SearchStr}" Padding="0,4" Background="{DynamicResource BackColor}" DockPanel.Dock="Right" Template="{DynamicResource RoundedTextBox}">
                                        <TextBox.ContextMenu>
                                            <ContextMenu Visibility="Collapsed"/>
                                        </TextBox.ContextMenu>
                                    </TextBox>
                                    <ex:MenuButton x:Name="SearchBtn" TextVisibility="Collapsed" Icon="{DynamicResource SearchIcon}" ToolTip="{DynamicResource SearchStr}"/>
                                    <ex:MenuButton x:Name="ExitSearchBtn" TextVisibility="Collapsed" Icon="{DynamicResource CrossIcon}" ToolTip="{DynamicResource FnClearSearchStr}"  Visibility="Collapsed"/>
                                </StackPanel>
                            </ScrollViewer>
                            <Grid x:Name="HomeScroll" HorizontalAlignment="Right" Background="{DynamicResource SecondaryColor}">
                                <StackPanel Orientation="Horizontal" Margin="5,4,5,0">
                                    <ex:MenuButton x:Name="HomeLeftBtn" Background="{DynamicResource SecondaryColor}" IsRSquared="True" TextVisibility="Collapsed" Icon="{DynamicResource LeftIcon}" Padding="0">
                                        <ex:MenuButton.Effect>
                                            <DropShadowEffect Direction="180" Color="#FFA0A0A0" ShadowDepth="2" Opacity="0.2"/>
                                        </ex:MenuButton.Effect>
                                    </ex:MenuButton>
                                    <ex:MenuButton x:Name="HomeRightBtn" Background="{DynamicResource SecondaryColor}" IsLSquared="True" TextVisibility="Collapsed" Icon="{DynamicResource RightIcon}" Padding="0">
                                        <ex:MenuButton.Effect>
                                            <DropShadowEffect Direction="0" Color="#FFA0A0A0" ShadowDepth="2" Opacity="0.2"/>
                                        </ex:MenuButton.Effect>
                                    </ex:MenuButton>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="FilterTab" Header="TabItem" Focusable="False">
                        <Grid Background="{DynamicResource SecondaryColor}">
                            <ScrollViewer x:Name="FilterScrollViewer" Margin="0,0,58,0" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                                <ScrollViewer.Resources>
                                    <Style TargetType="{x:Type ScrollBar}">
                                        <Style.Triggers>
                                            <Trigger Property="Orientation" Value="Horizontal">
                                                <Setter Property="Height" Value="10"/>
                                                <Setter Property="MinHeight" Value="0"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ScrollViewer.Resources>
                                <StackPanel x:Name="FilterPnl" Margin="12,4,2,0" Background="{DynamicResource SecondaryColor}" Orientation="Horizontal" CanHorizontallyScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Left">
                                    <ex:AppButton x:Name="ABtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="A" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="BBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="B" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="CBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="C" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="DBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="D" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="EBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="E" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="FBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="F" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="GBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="G" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="HBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="H" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="IBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="I" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="JBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="J" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="KBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="K" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="LBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="L" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="MBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="M" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="NBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="N" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="OBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="O" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="PBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="P" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="QBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="Q" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="RBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="R" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="SBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="S" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="TBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="T" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="UBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="U" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="VBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="V" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="WBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="W" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="XBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="X" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="YBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="Y" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="ZBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="Z" GapMargin="0" Padding="8,0" Height="32"/>
                                    <ex:AppButton x:Name="OtherBtn" IconVisibility="Collapsed" NoShadow="True" Background="Transparent" Text="123&amp;" GapMargin="0" Padding="8,0" Height="32"/>
                                </StackPanel>
                            </ScrollViewer>
                            <Grid x:Name="FilterScroll" HorizontalAlignment="Right" Background="{DynamicResource SecondaryColor}">
                                <StackPanel Orientation="Horizontal" Margin="5,4,5,0">
                                    <ex:MenuButton x:Name="FilterLeftBtn" Background="{DynamicResource SecondaryColor}" IsRSquared="True" TextVisibility="Collapsed" Icon="{DynamicResource LeftIcon}" Padding="0">
                                        <ex:MenuButton.Effect>
                                            <DropShadowEffect Direction="180" Color="#FFA0A0A0" ShadowDepth="2" Opacity="0.2"/>
                                        </ex:MenuButton.Effect>
                                    </ex:MenuButton>
                                    <ex:MenuButton x:Name="FilterRightBtn" Background="{DynamicResource SecondaryColor}" IsLSquared="True" TextVisibility="Collapsed" Icon="{DynamicResource RightIcon}" Padding="0">
                                        <ex:MenuButton.Effect>
                                            <DropShadowEffect Direction="0" Color="#FFA0A0A0" ShadowDepth="2" Opacity="0.2"/>
                                        </ex:MenuButton.Effect>
                                    </ex:MenuButton>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="CategoryTab" Header="TabItem" Focusable="False">
                        <Grid Background="{DynamicResource SecondaryColor}">
                            <ScrollViewer x:Name="CategoryScrollViewer" Margin="0,0,58,0" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                                <ScrollViewer.Resources>
                                    <Style TargetType="{x:Type ScrollBar}">
                                        <Style.Triggers>
                                            <Trigger Property="Orientation" Value="Horizontal">
                                                <Setter Property="Height" Value="10"/>
                                                <Setter Property="MinHeight" Value="0"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ScrollViewer.Resources>
                                <StackPanel x:Name="CategoryPnl" Margin="12,4,2,0" Background="{DynamicResource SecondaryColor}" Orientation="Horizontal" CanHorizontallyScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Left">
                                    <ex:MenuButton x:Name="FavCategoryBtn" Text="{DynamicResource FavouriteStr}" Icon="{DynamicResource FavouriteIcon}" ToolTip="{DynamicResource FavToolStr}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="CatSampleBtn" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Style="{DynamicResource AppButton}" Margin="0,4,0,0" Height="42" Visibility="Collapsed">
                                            <Button.ContextMenu>
                                                <ContextMenu x:Name="CategoryMenu" FontSize="14" HasDropShadow="False" Background="{DynamicResource BackColor}" BorderThickness="1,1,1,1" BorderBrush="#FFABADB3" Style="{DynamicResource SimpleContextMenu}">
                                                    <MenuItem x:Name="EditCategoryBtn" Header="{DynamicResource EditCatStr}" BorderThickness="0" Style="{DynamicResource SimpleMenuItem}" Padding="5"/>
                                                    <MenuItem x:Name="RemoveCategoryBtn" Header="{DynamicResource RemoveCatStr}" BorderThickness="0" Style="{DynamicResource SimpleMenuItem}" Padding="5"/>
                                                </ContextMenu>
                                            </Button.ContextMenu>
                                            <StackPanel Orientation="Horizontal" Height="36">
                                                <ContentControl x:Name="CategoryBtnImg" Content="{DynamicResource PlusIcon}" Width="20" HorizontalAlignment="Left" Margin="5,0" Height="24" />
                                                <TextBlock x:Name="CategoryNameTxt" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0,7.69,5,7" Height="21.31" Text="{DynamicResource AddCatStr}" Padding="5,0,0,0"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                    <Separator Style="{StaticResource VerticalSeparator}"/>
                                    <StackPanel x:Name="CategoriesPnl" Orientation="Horizontal"/>
                                    <ex:MenuButton x:Name="AddCategoryBtn" Text="{DynamicResource AddCatStr}" Icon="{DynamicResource PlusIcon}"/>
                                </StackPanel>
                            </ScrollViewer>
                            <Grid x:Name="CategoryScroll" HorizontalAlignment="Right" Background="{DynamicResource SecondaryColor}">
                                <StackPanel Orientation="Horizontal" Margin="5,4,5,0">
                                    <ex:MenuButton x:Name="CategoryLeftBtn" Background="{DynamicResource SecondaryColor}" IsRSquared="True" TextVisibility="Collapsed" Icon="{DynamicResource LeftIcon}" Padding="0">
                                        <ex:MenuButton.Effect>
                                            <DropShadowEffect Direction="180" Color="#FFA0A0A0" ShadowDepth="2" Opacity="0.2"/>
                                        </ex:MenuButton.Effect>
                                    </ex:MenuButton>
                                    <ex:MenuButton x:Name="CategoryRightBtn" Background="{DynamicResource SecondaryColor}" IsLSquared="True" TextVisibility="Collapsed" Icon="{DynamicResource RightIcon}" Padding="0">
                                        <ex:MenuButton.Effect>
                                            <DropShadowEffect Direction="0" Color="#FFA0A0A0" ShadowDepth="2" Opacity="0.2"/>
                                        </ex:MenuButton.Effect>
                                    </ex:MenuButton>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </TabItem>

