<Window x:Class="MainWindow" x:Name="Font1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Font_Express"
        mc:Ignorable="d"
        Title="Font Express" Background="{DynamicResource BackColor}" Height="620" Width="880" WindowStartupLocation="CenterScreen" MinWidth="520" MinHeight="350" WindowStyle="None">
    <Window.Resources>
        <Storyboard x:Key="LoadingStoryboard"/>
        <Storyboard x:Key="MenuStoryboard"/>
        <Storyboard x:Key="DocStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="grid1">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuBtnsFadeIn">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="HomeBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="FilterBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="CategoryBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuBtnsFadeOut">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="HomeBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="FilterBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="CategoryBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="HomeStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="HomePnl">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="FilterStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="FilterPnl">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CategoryStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="CategoryPnl">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="HomeMnStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="DocTabSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="65,0,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="FilterMnStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="DocTabSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="153,0,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CategoryMnStoryboard">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="DocTabSelector">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="241,0,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="FontHoverOut">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="MenuIcon">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="4,9,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)" Storyboard.TargetName="rect835">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="100"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="FontHoverIn">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="MenuIcon">
                <EasingThicknessKeyFrame KeyTime="0:0:0.1" Value="5,11,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)" Storyboard.TargetName="rect835">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="LoaderStartStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="LoadingGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="LoaderEndStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="LoadingGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        
        <!-- Shortcuts -->
        <RoutedUICommand x:Key="AllCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="FavCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="CompareCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="RefreshCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="SearchCommand"></RoutedUICommand>
        <RoutedUICommand x:Key="HelpCommand"></RoutedUICommand>

    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource AllCommand}" Executed="AllBtn_Click" />
        <CommandBinding Command="{StaticResource FavCommand}" Executed="FavBtn_Click" />
        <CommandBinding Command="{StaticResource CompareCommand}" Executed="CompareBtn_Click" />
        <CommandBinding Command="{StaticResource RefreshCommand}" Executed="RefreshBtn_Click" />
        <CommandBinding Command="{StaticResource SearchCommand}" Executed="SearchTxt_Focus" />
        <CommandBinding Command="{StaticResource HelpCommand}" Executed="HelpBtn_Click" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{StaticResource AllCommand}" />
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{StaticResource FavCommand}" />
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{StaticResource CompareCommand}" />
        <KeyBinding Key="R" Modifiers="Ctrl" Command="{StaticResource RefreshCommand}" />
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{StaticResource SearchCommand}" />
        <KeyBinding Key="F1" Command="{StaticResource HelpCommand}" />       
    </Window.InputBindings>
    
    <Grid>
        <Grid x:Name="grid1" Background="White" Margin="0">
            <Grid Margin="0">
                <Grid Margin="0,72,0,30">
                    <ScrollViewer x:Name="Scroller" Margin="0" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="RecentGrid" ScrollViewer.HorizontalScrollBarVisibility="Visible" Background="{DynamicResource BackColor}" Margin="0">
                            <WrapPanel x:Name="FontGrid" Margin="30" ItemWidth="235" ItemHeight="175" VerticalAlignment="Top">
                                <DockPanel x:Name="FontView" Height="160" Width="220" Background="{DynamicResource BackColor}" UseLayoutRounding="True">
                                    <Border CornerRadius="15" Background="{DynamicResource BackColor}">
                                        <Border.Effect>
                                            <DropShadowEffect Direction="270" Color="Gray" Opacity="0.1" BlurRadius="10"/>
                                        </Border.Effect>
                                        <DockPanel>
                                            <TextBlock x:Name="FontNameTxt" VerticalAlignment="Top" TextTrimming="CharacterEllipsis" FontSize="14" Margin="5,7,5,8" DockPanel.Dock="Bottom" Text="Name of font" HorizontalAlignment="Center"/>
                                            <Rectangle DockPanel.Dock="Bottom" Height="2" Fill="{DynamicResource AppColor}"/>
                                            <DockPanel x:Name="OptionsPnl" DockPanel.Dock="Bottom">
                                                <Button x:Name="ExpandBtn" HorizontalAlignment="Right" Height="25" Margin="0" Style="{DynamicResource AppButton}" VerticalAlignment="Top" Width="25" Background="{DynamicResource BackColor}" FontSize="14" DockPanel.Dock="Right" ToolTip="Expand" BorderThickness="0">
                                                    <ContentControl Width="16" Content="{DynamicResource ExpandIcon}" Height="16"/>
                                                </Button>
                                                <Button x:Name="CopyBtn" HorizontalAlignment="Right" Height="25" Margin="0" Style="{DynamicResource AppButton}" VerticalAlignment="Top" Width="25" Background="{DynamicResource BackColor}" FontSize="14" DockPanel.Dock="Right" ToolTip="Copy font name" BorderThickness="0">
                                                    <ContentControl Width="16" Content="{DynamicResource CopyIcon}" Height="16"/>
                                                </Button>
                                                <Button x:Name="FavouriteBtn" HorizontalAlignment="Right" Height="25" Margin="0" Style="{DynamicResource AppButton}" VerticalAlignment="Top" Width="25" Background="{DynamicResource BackColor}" FontSize="14" DockPanel.Dock="Right" ToolTip="Add to category" BorderThickness="0">
                                                    <ContentControl Width="16" Content="{DynamicResource CategoryIcon}" Height="16"/>
                                                </Button>
                                                <Button x:Name="ItalicBtn" HorizontalAlignment="Right" Height="25" Margin="0" Style="{DynamicResource AppButton}" VerticalAlignment="Top" Width="25" Background="{DynamicResource BackColor}" FontSize="14" DockPanel.Dock="Right" ToolTip="Italic" BorderThickness="0">
                                                    <ContentControl Width="16" Content="{DynamicResource ItalicIcon}" Height="16"/>
                                                </Button>
                                                <Button x:Name="BoldBtn" HorizontalAlignment="Right" Height="25" Margin="0" Style="{DynamicResource AppButton}" VerticalAlignment="Top" Width="25" Background="{DynamicResource BackColor}" FontSize="14" DockPanel.Dock="Right" ToolTip="Bold" BorderThickness="0">
                                                    <ContentControl Width="16" Content="{DynamicResource BoldIcon}" Height="16"/>
                                                </Button>
                                                <Slider x:Name="SizeSlider" IsSnapToTickEnabled="True" Minimum="10" Maximum="70" SmallChange="1" Value="22" Margin="5,2,5,0" LargeChange="10"/>
                                            </DockPanel>
                                            <TextBlock x:Name="DisplayTxt" Margin="10,10,10,5" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="The quick brown fox jumps over the lazy dog" DockPanel.Dock="Top" FontSize="22" FontFamily="Roboto"/>
                                        </DockPanel>
                                    </Border>
                                </DockPanel>
                            </WrapPanel>
                            <Button x:Name="LoadMoreBtn" Content="{DynamicResource LoadMoreStr}" HorizontalAlignment="Center" Height="31" Margin="0,0,0,20" Style="{DynamicResource AppRoundedButton}" VerticalAlignment="Center" Width="149" Background="{DynamicResource BackColor}" FontSize="14" DockPanel.Dock="Top" Visibility="Collapsed"/>
                        </StackPanel>
                    </ScrollViewer>
                    <Grid x:Name="LoadingGrid" Background="{DynamicResource BackColor}" Visibility="Collapsed">
                        <DockPanel MaxHeight="400" Margin="0,50">
                            <TextBlock Text="{DynamicResource LoaderSubtitleStr}" HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Center" Margin="0,5,0,0" DockPanel.Dock="Bottom"/>
                            <TextBlock Text="{DynamicResource LoadingStr}" HorizontalAlignment="Center" FontFamily="Segoe UI Light" FontSize="24" VerticalAlignment="Center" Margin="0" DockPanel.Dock="Bottom"/>
                            <Viewbox>
                                <ContentControl Content="{DynamicResource FontLoaderVector}"/>
                            </Viewbox>
                        </DockPanel>
                    </Grid>

                </Grid>

                <TabControl x:Name="DocTabs" Margin="0,4,0,0" Height="68" Padding="0" BorderThickness="0" VerticalAlignment="Top">
                    <TabControl.Effect>
                        <DropShadowEffect Direction="270" Color="Gray" Opacity="0.1" BlurRadius="10"/>
                    </TabControl.Effect>
                    <TabItem x:Name="HomeTab" Header="TabItem" Focusable="False">
                        <Grid x:Name="grid2" Background="{DynamicResource SecondaryColor}">
                            <ScrollViewer x:Name="HomeScrollViewer" Margin="60,0,40,0" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                                <ScrollViewer.Resources>
                                    <Style TargetType="{x:Type ScrollBar}">
                                        <Style.Triggers>
                                            <Trigger Property="Orientation" Value="Horizontal">
                                                <Setter Property="Height" Value="10"/>
                                                <Setter Property="MinHeight" Value="0"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ScrollViewer.Resources>
                                <StackPanel x:Name="HomePnl" Margin="12,0,0,0" Background="{DynamicResource SecondaryColor}" Orientation="Horizontal" CanHorizontallyScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Left">
                                    <Button x:Name="AllBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Margin="0,4,0,0" ToolTip="{DynamicResource AllToolStr}">
                                        <StackPanel Orientation="Horizontal" Height="36">
                                            <TextBlock x:Name="FavouritesBtnTxt" HorizontalAlignment="Center" FontSize="14" Margin="0,7.69,5,7" Height="21.31" Text="{DynamicResource FnAllStr}" Padding="5,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="FavBtn" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Style="{DynamicResource AppButton}" Margin="0,4,0,0" Height="42" ToolTip="{DynamicResource FavToolStr}">
                                        <StackPanel Orientation="Horizontal" Height="36">
                                            <ContentControl x:Name="FavBtnImg" Content="{DynamicResource FavouriteIcon}" Width="20" HorizontalAlignment="Left" Margin="5,0" Height="24" />
                                            <TextBlock x:Name="HomeBtnTxt_Copy122" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0,7.69,5,7" Height="21.31" Text="{DynamicResource FavouriteStr}" Padding="5,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="CompareBtn" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Style="{DynamicResource AppButton}" Margin="0,4,0,0" Height="42" ToolTip="{DynamicResource CompareToolStr}">
                                        <StackPanel Orientation="Horizontal" Height="36">
                                            <ContentControl x:Name="CompareBtnImg" Content="{DynamicResource TitleCaseIcon}" Width="24" HorizontalAlignment="Left" Margin="3,0" Height="24" />
                                            <TextBlock x:Name="HomeBtnTxt_Copy12" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0,7.69,5,7" Height="21.31" Text="{DynamicResource CompareStr}" Padding="5,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                    <Separator Margin="0,24,0,19" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="20">
                                        <Separator.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="90"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Separator.RenderTransform>
                                    </Separator>
                                    <TextBox x:Name="SearchTxt" Margin="0,12,5,8" Text="{DynamicResource FnSearchStr}" Width="115" UseLayoutRounding="False" VerticalContentAlignment="Center" UndoLimit="0" Foreground="#FF818181" Tag="{DynamicResource FnSearchStr}" Background="{DynamicResource BackColor}" DockPanel.Dock="Right" Template="{DynamicResource RoundedTextBox}">
                                        <TextBox.ContextMenu>
                                            <ContextMenu Visibility="Collapsed"/>
                                        </TextBox.ContextMenu>
                                    </TextBox>
                                    <Button x:Name="SearchBtn" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Style="{DynamicResource AppButton}" Margin="0,4,0,0" Height="42" ToolTip="{DynamicResource FnSearchStr}">
                                        <StackPanel Orientation="Horizontal" Height="36">
                                            <ContentControl x:Name="TemplateSharchBtnImg" Content="{DynamicResource SearchIcon}" Width="20" HorizontalAlignment="Left" Margin="5,0" Height="24" />
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="ExitSearchBtn" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Style="{DynamicResource AppButton}" Margin="0,4,0,0" Height="42" ToolTip="{DynamicResource FnExitSearchStr}" Visibility="Collapsed">
                                        <StackPanel Orientation="Horizontal" Height="36">
                                            <ContentControl x:Name="TemplateShearchBtnImg1" Content="{DynamicResource CrossIcon}" Width="20" HorizontalAlignment="Left" Margin="5,0" Height="24" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </ScrollViewer>
                            <Grid x:Name="HomeScroll" HorizontalAlignment="Right" Background="{DynamicResource SecondaryColor}">
                                <Grid.Effect>
                                    <DropShadowEffect Direction="180" Color="#FFA0A0A0" ShadowDepth="2" Opacity="0.2"/>
                                </Grid.Effect>
                                <Button x:Name="HomeLeftBtn" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Right" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" DockPanel.Dock="Right" Style="{DynamicResource AppButton}" Margin="0,0,20,0" Width="20">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl x:Name="HelpBtnImg475" Content="{DynamicResource LeftIcon}" Margin="0" Height="24" Width="20" />
                                    </StackPanel>
                                </Button>
                                <Button x:Name="HomeRightBtn" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Right" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Style="{DynamicResource AppButton}" Margin="0" Width="20">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl x:Name="HelpBtnImg35" Content="{DynamicResource RightIcon}" Margin="0" Height="24" Width="20" />
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="FilterTab" Header="TabItem" Focusable="False">
                        <Grid Background="{DynamicResource SecondaryColor}">
                            <ScrollViewer x:Name="FilterScrollViewer" Margin="60,0,40,0" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                                <ScrollViewer.Resources>
                                    <Style TargetType="{x:Type ScrollBar}">
                                        <Style.Triggers>
                                            <Trigger Property="Orientation" Value="Horizontal">
                                                <Setter Property="Height" Value="10"/>
                                                <Setter Property="MinHeight" Value="0"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ScrollViewer.Resources>
                                <StackPanel x:Name="FilterPnl" Margin="12,0,0,0" Background="{DynamicResource SecondaryColor}" Orientation="Horizontal" CanHorizontallyScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Left">
                                    <Button x:Name="ABtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="a" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt2" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="A"/>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="BBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="b" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt1" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="B"/>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="CBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="c" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt3" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="C"/>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="DBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="d" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt4" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="D"/>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="EBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="e" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt5" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="E"/>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="FBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="f" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt6" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="F"/>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="GBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="g" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt7" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="G"/>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="HBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="h" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt8" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="H"/>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="IBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="i" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt9" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="I"/>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="JBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="j" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt10" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="J"/>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="KBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="k" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt11" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="K"/>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="LBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="l" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt12" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="L"/>
                                        </Grid>
                                    </Button>
                                    <Button x:Name="MBtn" Foreground="{DynamicResource TextColor}" Height="42" Width="Auto" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Style="{DynamicResource AppButton}" BorderBrush="{DynamicResource BackColor}" Tag="m" Margin="0,4,0,0">
                                        <Grid>
                                            <TextBlock x:Name="FavouritesBtnTxt13" HorizontalAlignment="Center" FontSize="16" Margin="10,0,10,2" Text="M"/>
