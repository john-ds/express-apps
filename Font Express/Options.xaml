                    <Button x:Name="ImportSettingsBtn" Foreground="{DynamicResource TextColor}" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" BorderThickness="0" Margin="0,15,0,0" Style="{DynamicResource AppButton}" Background="#00000000" BorderBrush="#FFABADB3">
                        <DockPanel MinHeight="38">
                            <ContentControl Content="{DynamicResource ImportSettingsIcon}" Width="24" HorizontalAlignment="Left" Margin="15,0" Height="24" />
