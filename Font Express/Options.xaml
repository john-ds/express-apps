                                <DockPanel Height="24">
                                    <TextBlock x:Name="CategoryLbl" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,3,15,0" Height="21.31" Text="{DynamicResource FavouriteStr}" Padding="0" MaxWidth="250" TextTrimming="CharacterEllipsis"/>
                                    <ContentControl Content="{DynamicResource DownIcon}" Width="11.5" HorizontalAlignment="Right" Margin="0,0,10,0" Height="24" DockPanel.Dock="Right" />
                                </DockPanel>
                            </Button>
                            <ScrollViewer Margin="30,10,30,5" Height="100">
                                <StackPanel x:Name="FavouriteList"/>
                            </ScrollViewer>
                        </DockPanel>
                        <DockPanel x:Name="ImportPnl" Margin="0">
                            <Button x:Name="ImportBtn" Content="{DynamicResource FnImportStr}" Height="30" Margin="30,5,0,0" Style="{DynamicResource AppBorderlessButton}" VerticalAlignment="Top" Background="{DynamicResource BackColor}" FontSize="14" HorizontalAlignment="Left" Padding="10,1"/>
                            <Button x:Name="ExportBtn" Content="{DynamicResource FnExportFontsStr}" Height="30" Margin="10,5,0,0" Style="{DynamicResource AppBorderlessButton}" VerticalAlignment="Top" Background="{DynamicResource BackColor}" FontSize="14" HorizontalAlignment="Left" Padding="10,1"/>
                        </DockPanel>
                        <DockPanel x:Name="ExportPnl" Margin="0">
                            <TextBlock FontSize="14" Padding="30,15,0,0" DockPanel.Dock="Top" Text="{DynamicResource FnExportStr}" Margin="0,10,0,0"/>
                            <Button x:Name="ExportAllBtn" Content="{DynamicResource FnExportAllStr}" Height="30" Margin="30,5,0,10" Style="{DynamicResource AppBorderlessButton}" VerticalAlignment="Top" Background="{DynamicResource BackColor}" FontSize="14" Width="100" HorizontalAlignment="Left"/>
                        </DockPanel>

                        <Label x:Name="MenuHeaderLbl_Copy" Height="50"  VerticalContentAlignment="Bottom" Margin="0" Padding="30,5,5,5" FontSize="20" Content="{DynamicResource GeneralStr}" Background="{x:Null}" Foreground="{DynamicResource TextColor}"/>
