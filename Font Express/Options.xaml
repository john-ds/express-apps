                        <Label x:Name="MenuHeaderLbl_Copy2" Height="50"  VerticalContentAlignment="Bottom" Margin="0" Padding="30,5,5,5" FontSize="20" Content="{DynamicResource StartupStr}" Background="{x:Null}" Foreground="{DynamicResource TextColor}"/>
                        <DockPanel x:Name="StartupPnl" LastChildFill="False" Margin="0">
                            <TextBlock FontSize="14" Padding="30,15,0,0" DockPanel.Dock="Top" Text="{DynamicResource StartupInfoStr}"/>
                            <Button x:Name="NotificationBtn" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Left" Background="Transparent" BorderBrush="{x:Null}" BorderThickness="0" Style="{DynamicResource AppButton}" Height="24" Margin="30,5,0,0" DockPanel.Dock="Top">
                                <StackPanel Orientation="Horizontal">
                                    <ContentControl x:Name="NotificationImg" Content="{DynamicResource TickIcon}" Width="20" Margin="5,0,0,0" Tag="1" />
                                    <TextBlock x:Name="HomeBtnTxt_Copy6" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,10,0" Height="21.31" Padding="5,0,0,0" Text="{DynamicResource StNotificationStr}"/>
                                </StackPanel>
                            </Button>
                        </DockPanel>
                        <DockPanel x:Name="ViewPnl" LastChildFill="False" Margin="0,0,0,20">
                            <TextBlock FontSize="14" Padding="30,15,0,0" DockPanel.Dock="Top" Text="{DynamicResource ViewStr}"/>
                            <Button x:Name="AllRadio" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="{DynamicResource BackColor}" BorderBrush="{x:Null}" BorderThickness="0" Style="{DynamicResource AppButton}" Margin="30,5,0,0" Height="24">
                                <StackPanel Orientation="Horizontal">
                                    <ContentControl x:Name="AllRadioImg" Content="{DynamicResource TickIcon}" Width="20" Margin="5,0,0,0" Tag="1"/>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Margin="0,5,10,0" Height="21.31" Padding="5,0,0,0" Text="{DynamicResource AllFontsStr}"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="FavRadio" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="{DynamicResource BackColor}" BorderBrush="{x:Null}" BorderThickness="0" Style="{DynamicResource AppButton}" Margin="0,5,0,0" Height="24">
                                <StackPanel Orientation="Horizontal">
                                    <ContentControl x:Name="FavRadioImg" Content="{DynamicResource UntickIcon}" Width="20" Margin="5,0,0,0" Tag="0"/>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Margin="0,5,10,0" Height="21.31" Padding="5,0,0,0" Text="{DynamicResource FavouriteStr}"/>
                                </StackPanel>
                            </Button>
                        </DockPanel>
                    </StackPanel>
                </ScrollViewer>
                <Grid Width="180" HorizontalAlignment="Left" Background="{DynamicResource SecondaryColor}">
                    <Grid.Effect>
                        <DropShadowEffect Direction="360" Opacity="0.1" Color="#FFC3C3C3"/>
                    </Grid.Effect>
                </Grid>
                <TextBlock x:Name="SavedTxt" Text="{DynamicResource SavedStr}" FontSize="14" Padding="0" Margin="20,0,0,20" VerticalAlignment="Bottom" TextAlignment="Right" HorizontalAlignment="Left" Visibility="Collapsed"/>
                <StackPanel x:Name="stackPanel_Copy" ScrollViewer.HorizontalScrollBarVisibility="Visible" CanVerticallyScroll="True" ScrollViewer.CanContentScroll="True" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="180">
                    <StackPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </StackPanel.RenderTransform>

                    <Button x:Name="CategoriesBtn" Foreground="{DynamicResource TextColor}" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" BorderThickness="0" Margin="0,15,0,0" Style="{DynamicResource AppButton}" Background="#00000000" BorderBrush="#FFABADB3">
                        <DockPanel MinHeight="38">
                            <ContentControl x:Name="HelpBtnImg24" Content="{DynamicResource BulletIcon}" Width="22" HorizontalAlignment="Left" Margin="16,0,15,0" Height="24" />
                            <TextBlock x:Name="RecentBtnTxt" FontSize="14" Margin="0" Text="{DynamicResource OpCatStr}" TextWrapping="Wrap" VerticalAlignment="Center"/>
                        </DockPanel>
                    </Button>
                    <Button x:Name="GeneralBtn" Foreground="{DynamicResource TextColor}" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" BorderThickness="0" Margin="0" Style="{DynamicResource AppButton}" Background="#00000000" BorderBrush="#FFABADB3">
                        <DockPanel MinHeight="38">
                            <ContentControl x:Name="HelpBtnImg23" Content="{DynamicResource OptionsIcon}" Width="24" HorizontalAlignment="Left" Margin="15,0" Height="24" />
                            <TextBlock x:Name="RecentBtnTxt1" FontSize="14" Margin="0" Text="{DynamicResource OpGeneralStr}" TextWrapping="Wrap" VerticalAlignment="Center"/>
                        </DockPanel>
                    </Button>
                    <Button x:Name="StartupBtn" Foreground="{DynamicResource TextColor}" VerticalAlignment="Top" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" BorderThickness="0" Margin="0" Style="{DynamicResource AppButton}" Background="#00000000" BorderBrush="#FFABADB3">
                        <DockPanel MinHeight="38">
