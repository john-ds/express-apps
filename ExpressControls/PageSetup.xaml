<ex:ExpressWindow x:Class="ExpressControls.PageSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ex="clr-namespace:ExpressControls"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d" x:Name="Prnt"
        Title="Type Express" Width="400" SizeToContent="Height" Style="{DynamicResource ChromeWindowStyle}" d:FontFamily="Inter" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Background="{DynamicResource BackColor}">
        <StackPanel Margin="20,50,20,20">
            <TextBlock TextWrapping="Wrap" Text="{DynamicResource PageSetupDescStr}" FontSize="14" FontWeight="SemiBold"/>
            <TextBlock x:Name="PaperSizeComboLbl" Margin="0,20,0,10" TextWrapping="Wrap" Text="{DynamicResource PaperSizeStr}" FontSize="14" VerticalAlignment="Center"/>
            <ex:AppDropdown x:Name="PaperSizeCombo" Background="{DynamicResource BackSpecialColor}" DropdownBackground="{DynamicResource SecondaryColor}" VerticalAlignment="Center" Height="30" AutomationProperties.LabeledBy="{Binding ElementName=PaperSizeComboLbl}"/>
            <TextBlock Margin="0,25,0,10" TextWrapping="Wrap" Text="{DynamicResource OrientationStr}" FontSize="14" VerticalAlignment="Center"/>
            <GroupBox Header="{DynamicResource OrientationStr}" Style="{DynamicResource ExpressHiddenGroupBox}">
                <StackPanel Orientation="Horizontal">
                    <ex:AppRadioButton x:Name="PortraitBtn" Content="{DynamicResource PortraitStr}" Tag="portrait" HorizontalContentAlignment="Stretch" IsChecked="True" GroupName="OrientationOptions"/>
                    <ex:AppRadioButton x:Name="LandscapeBtn" Content="{DynamicResource LandscapeStr}" Tag="landscape" HorizontalContentAlignment="Stretch" GroupName="OrientationOptions" Margin="5,0,0,0"/>
                </StackPanel>
            </GroupBox>
            <TextBlock Margin="0,25,0,10" TextWrapping="Wrap" Text="{DynamicResource MarginsStr}" FontSize="14" VerticalAlignment="Center"/>
            <GroupBox Header="{DynamicResource MarginsStr}" Style="{DynamicResource ExpressHiddenGroupBox}">
                <StackPanel>
                    <DockPanel LastChildFill="False">
                        <TextBlock x:Name="LeftMarginUpDownLbl" TextWrapping="Wrap" Text="{DynamicResource LeftMarginStr}" MinWidth="75" FontSize="14" VerticalAlignment="Center"/>
                        <xctk:DoubleUpDown x:Name="LeftMarginUpDown" ShowButtonSpinner="False" Style="{DynamicResource ExpressDoubleUpDown}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Minimum="0.01" Maximum="1000" Value="10" Height="30" AutomationProperties.LabeledBy="{Binding ElementName=LeftMarginUpDownLbl}"/>
                        <xctk:DoubleUpDown x:Name="RightMarginUpDown" DockPanel.Dock="Right" ShowButtonSpinner="False" Style="{DynamicResource ExpressDoubleUpDown}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Minimum="0.01" Maximum="1000" Value="10" Height="30" AutomationProperties.LabeledBy="{Binding ElementName=RightMarginUpDownLbl}"/>
                        <TextBlock x:Name="RightMarginUpDownLbl" TextWrapping="Wrap" Text="{DynamicResource RightMarginStr}" MinWidth="75" FontSize="14" VerticalAlignment="Center" DockPanel.Dock="Right"/>
                    </DockPanel>
                    <DockPanel LastChildFill="False" Margin="0,5,0,0">
                        <TextBlock x:Name="TopMarginUpDownLbl" TextWrapping="Wrap" Text="{DynamicResource TopMarginStr}" MinWidth="75" FontSize="14" VerticalAlignment="Center"/>
                        <xctk:DoubleUpDown x:Name="TopMarginUpDown" ShowButtonSpinner="False" Style="{DynamicResource ExpressDoubleUpDown}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Minimum="0.01" Maximum="1000" Value="10" Height="30" AutomationProperties.LabeledBy="{Binding ElementName=TopMarginUpDownLbl}"/>
                        <xctk:DoubleUpDown x:Name="BottomMarginUpDown" DockPanel.Dock="Right" ShowButtonSpinner="False" Style="{DynamicResource ExpressDoubleUpDown}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Minimum="0.01" Maximum="1000" Value="10" Height="30" AutomationProperties.LabeledBy="{Binding ElementName=BottomMarginUpDownLbl}"/>
                        <TextBlock x:Name="BottomMarginUpDownLbl" TextWrapping="Wrap" Text="{DynamicResource BottomMarginStr}" MinWidth="75" FontSize="14" VerticalAlignment="Center" DockPanel.Dock="Right"/>
                    </DockPanel>
                </StackPanel>
            </GroupBox>
            <TextBlock Margin="0,25,0,10" TextWrapping="Wrap" Text="{DynamicResource MeasurementUnitStr}" FontSize="14" VerticalAlignment="Center"/>
            <GroupBox Header="{DynamicResource MeasurementUnitStr}" Style="{DynamicResource ExpressHiddenGroupBox}">
                <StackPanel Orientation="Horizontal">
                    <ex:AppRadioButton x:Name="MilimetresBtn" Click="MeasurementBtns_Click" Content="{DynamicResource MilimetresStr}" Tag="milimetres" HorizontalContentAlignment="Stretch" IsChecked="True" GroupName="MeasurementOptions"/>
                    <ex:AppRadioButton x:Name="InchesBtn" Click="MeasurementBtns_Click" Content="{DynamicResource InchesStr}" Tag="inches" HorizontalContentAlignment="Stretch" GroupName="MeasurementOptions" Margin="5,0,0,0"/>
                </StackPanel>
            </GroupBox>
            <DockPanel LastChildFill="False" Margin="0,30,0,0">
                <ex:AppButton x:Name="CancelBtn" Background="{DynamicResource BackSpecialColor}" Click="CancelBtn_Click" LastChildFill="True" Text="{DynamicResource CancelStr}" IconVisibility="Collapsed" GapMargin="0" Margin="10,0,0,0" HorizontalContentAlignment="Stretch" IsCancel="True" Height="32" VerticalAlignment="Top" MinWidth="84" DockPanel.Dock="Right"/>
                <ex:AppButton x:Name="OKBtn" Background="{DynamicResource BackSpecialColor}" Click="OKBtn_Click" LastChildFill="True" Text="OK" IconVisibility="Collapsed" GapMargin="0" HorizontalContentAlignment="Stretch" FontWeight="SemiBold" IsDefault="True" Height="32" VerticalAlignment="Top" MinWidth="84" DockPanel.Dock="Right"/>
            </DockPanel>
        </StackPanel>
        <DockPanel Height="30" Margin="0" VerticalAlignment="Top" Background="{DynamicResource AppColor}">
            <ex:AppButton x:Name="CloseBtn" IsCloseBtn="True" Background="Transparent" Icon="{DynamicResource CloseWhiteIcon}" NoShadow="True" CornerRadius="0" IconSize="16" Height="30" Padding="7,0" TextVisibility="Collapsed" DockPanel.Dock="Right" ToolTip="{DynamicResource CloseStr}"/>
            <ex:AppButton x:Name="AppLogoBtn" HasNoEffects="True" Focusable="False" Background="Transparent" Icon="{DynamicResource AppWhiteIcon}" NoShadow="True" CornerRadius="0" IconSize="20" Height="30" Padding="6,0,0,0" TextVisibility="Collapsed"/>
            <ex:AppButton x:Name="TitleBtn" HasNoEffects="True" Focusable="False" Text="{Binding Title, ElementName=Prnt}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Foreground="White" FontSize="12" GapMargin="0" Background="Transparent" NoShadow="True" CornerRadius="0" IconVisibility="Collapsed" Height="30" Padding="7,0"/>
        </DockPanel>
    </Grid>
</ex:ExpressWindow>
