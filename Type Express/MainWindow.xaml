    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource NewCommand}" Executed="NewBtn_Click" />
        <CommandBinding Command="{StaticResource OpenCommand}" Executed="OpenBtn_Click" />
        <CommandBinding Command="{StaticResource SaveCommand}" Executed="SaveBtn_Click" />
        <CommandBinding Command="{StaticResource PrintCommand}" Executed="PrintBtn_Click" />
        <CommandBinding Command="{StaticResource ShareCommand}" Executed="ShareBtn_Click" />

        <CommandBinding Command="{StaticResource LockCommand}" Executed="QuickLock" />
        <CommandBinding Command="{StaticResource HelpCommand}" Executed="HelpBtn_Click" />

        <CommandBinding Command="{StaticResource StyleCommand}" Executed="StylesBtn_Click" />
        <CommandBinding Command="{StaticResource FindCommand}" Executed="FindReplaceBtn_Click" />
        <CommandBinding Command="{StaticResource SymbolCommand}" Executed="SymbolBtn_Click" />
        <CommandBinding Command="{StaticResource EquationCommand}" Executed="EquationBtn_Click" />
        <CommandBinding Command="{StaticResource PictureCommand}" Executed="OfflinePicturesBtn_Click" />
        <CommandBinding Command="{StaticResource TableCommand}" Executed="TableBtn_Click" />
        <CommandBinding Command="{StaticResource DateCommand}" Executed="TextBlockBtn_Click" />

    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{StaticResource NewCommand}" />
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{StaticResource OpenCommand}" />
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{StaticResource SaveCommand}" />
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{StaticResource PrintCommand}" />
        <KeyBinding Key="J" Modifiers="Ctrl" Command="{StaticResource ShareCommand}" />

        <KeyBinding Key="L" Modifiers="Alt" Command="{StaticResource LockCommand}" />
        <KeyBinding Key="F1" Command="{StaticResource HelpCommand}" />

        <KeyBinding Key="D" Modifiers="Ctrl" Command="{StaticResource StyleCommand}" />
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{StaticResource FindCommand}" />
        <KeyBinding Key="G" Modifiers="Ctrl" Command="{StaticResource SymbolCommand}" />
        <KeyBinding Key="H" Modifiers="Ctrl" Command="{StaticResource EquationCommand}" />
        <KeyBinding Key="M" Modifiers="Ctrl" Command="{StaticResource PictureCommand}" />
        <KeyBinding Key="Q" Modifiers="Ctrl" Command="{StaticResource TableCommand}" />
        <KeyBinding Key="T" Modifiers="Ctrl" Command="{StaticResource DateCommand}" />

    </Window.InputBindings>


